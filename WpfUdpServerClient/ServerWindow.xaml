<Window x:Class="WpfUdpServerClient.ServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server" Height="450" Width="800">
    <Grid>
        <Button Name="StartServerButton" Content="Start Server" Click="StartServerButton_Click" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
        <Button Name="StopServerButton" Content="Stop Server" Click="StopServerButton_Click" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="120,10,0,0" IsEnabled="False"/>
        <Button Name="ShowComponentsList" Content="Show Components List" Click="ShowComponentsList_Click" Width="150" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="230,10,0,0"/>
        <TextBox Name="ComponentsListTextBox" VerticalAlignment="Top" Margin="10,50,10,10" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
