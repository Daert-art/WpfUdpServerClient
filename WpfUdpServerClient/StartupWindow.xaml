<Window x:Class="WpfUdpServerClient.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUdpServerClient"
        mc:Ignorable="d"
        Title="Startup" Height="150" Width="300">
    <Grid>
        <Button Name="StartServerButton" Content="Start Server" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="120" Click="StartServerButton_Click"/>
        <Button Name="StartClientButton" Content="Start Client" HorizontalAlignment="Left" Margin="140,10,0,0" VerticalAlignment="Top" Width="120" Click="StartClientButton_Click"/>
    </Grid>
</Window>
